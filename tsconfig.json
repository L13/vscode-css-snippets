{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"lib": ["es2020"],
		"outDir": "out",
		"sourceMap": true,
		"noEmitOnError": false,
		"removeComments": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"strictBindCallApply": true,
		"strictNullChecks": false,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": false,
		"allowSyntheticDefaultImports": true,
		"rootDir": "src"
	},
	"exclude": [
		"snippets",
		"node_modules",
		".vscode-test"
	]
}